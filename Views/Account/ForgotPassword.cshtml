@model FileSharing.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = @Localizer["Login"];
}


    <section id="mu-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-contact-area" style="padding-top: 0px">
                        <!-- Title -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-title">
                                    <h2>@Localizer["ForgotPassword"]</h2>
                                </div>
                            </div>
                        </div>
                            <!-- Start Contact Content -->
                        <div class="mu-contact-content">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="mu-contact-form-area">
                                        <div id="form-messages"></div>
                                        <form method="post" class="mu-contact-form" asp-action="ForgotPassword">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">  
                                                <span class="fa fa-user mu-contact-icon"></span>              
                                                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["Email"]" id="Email" name="Email" required>
                                                <span asp-validation-for="Email"></span>
                                            </div>
                                            <button type="submit" class="mu-send-msg-btn"><span>@Localizer["submit"]</span></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Contact Content -->
                    </div>
                </div>
            </div>
        </div>
    </section>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}