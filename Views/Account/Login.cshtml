@model FileSharing.Models.LoginViewModel
@{
    ViewData["Title"] = @Localizer["Login"];
}


    <section id="mu-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-contact-area" style="padding-top: 0px">
                        <!-- Title -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-title">
                                    <h2>@Localizer["Login"]</h2>
                                </div>
                            </div>
                        </div>
                            <!-- Start Contact Content -->
                        <div class="mu-contact-content">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="mu-contact-form-area">
                                        <div id="form-messages"></div>
                                        <form method="post" class="mu-contact-form" asp-action="Login" asp-route-ReturnUrl = "@Context.Request.Query["ReturnUrl"]">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">  
                                                <span class="fa fa-user mu-contact-icon"></span>              
                                                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["Email"]" id="Email" name="Email" required>
                                                <span asp-validation-for="Email"></span>
                                            </div>

                                            <div class="form-group">  
                                                <span class="fa fa-envelope mu-contact-icon"></span>              
                                                <input asp-for="Password" type="password" class="form-control" placeholder="@Localizer["Enter.Password"]" id="password" name="password" required>
                                                <span asp-validation-for="Password"></span>
                                            </div>  
                                            <button type="submit" class="mu-send-msg-btn"><span>@Localizer["Login"]</span></button>
                                        </form>
                                    </div>
                                </div>
                                <div class="row" id="loginbuttons">
                                    <div class="col-md-6">
                                        <a class="btn btn-outline-primary" asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Facebook">Login With Facebook</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a class="btn btn-outline-danger" asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Google">Login With Google</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Contact Content -->
                    </div>
                </div>
            </div>
        </div>
    </section>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}